<Page x:Class="NaitiKino.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NaitiKino.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="30" >Авторизация</TextBlock>
            <TextBlock>Логин:</TextBlock>
            <TextBox Name="LoginTextBox" Width="200"/>
            <TextBlock>Пароль:</TextBlock>
            <PasswordBox Name="PasswordBox" Width="200"/>
            <Button Content="Вход" Margin="0 10" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
